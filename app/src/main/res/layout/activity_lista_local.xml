<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ListaLocal">

    <ListView
        android:id="@+id/listView_locais"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:divider="@android:drawable/divider_horizontal_textfield"
        android:dividerHeight="20dp" />

    <Button
        android:id="@+id/btn_novoLocal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="onClickNovoLocal"
        android:text="Cadastrar local" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="20dp" />

    <Button
        android:id="@+id/btn_voltaEvento"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="onClickEvento"
        android:text="Voltar para Eventos" />
</LinearLayout>